<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_item"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTime"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_component_tiny"
        android:padding="@dimen/padding_component_tiny"
        android:gravity="center"
        android:text="@string/zero_min"
        android:textSize="@dimen/text_size_large">
    </TextView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/margin_component_big"
        android:layout_marginRight="@dimen/margin_component_big"
        android:layout_marginTop="@dimen/margin_component_tiny"
        android:background="@color/gray_trans"/>

</LinearLayout>
