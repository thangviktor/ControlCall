<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/margin_component_big"
        android:paddingRight="@dimen/margin_component_big"
        android:paddingTop="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/total_call_time_in_this_month"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_large"
            android:textColor="@color/blue"/>

        <TextView
            android:id="@+id/tvSimA"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/margin_component_large"
            android:text="@string/sim_a"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_large"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tvIncomingA"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/margin_component_tiny"
            android:layout_marginTop="@dimen/margin_component_tiny"
            android:text="@string/incoming"
            android:textSize="@dimen/text_size_big"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tvOutgoingA"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/margin_component_tiny"
            android:layout_marginTop="@dimen/margin_component_tiny"
            android:text="@string/outgoing"
            android:textSize="@dimen/text_size_big"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvSimB"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/margin_component_large"
            android:text="@string/sim_b"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_large"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tvIncomingB"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/margin_component_tiny"
            android:layout_marginTop="@dimen/margin_component_tiny"
            android:text="@string/incoming"
            android:textSize="@dimen/text_size_big"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tvOutgoingB"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/margin_component_tiny"
            android:layout_marginTop="@dimen/margin_component_tiny"
            android:text="@string/outgoing"
            android:textSize="@dimen/text_size_big"
            android:textColor="@color/black" />

    </LinearLayout>

</ScrollView>

